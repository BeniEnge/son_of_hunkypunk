<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.andglk"
      android:versionCode="1"
      android:versionName="1.0">
      
	<uses-permission android:name="android.permission.INTERNET"/>
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".Nitfol"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboard|keyboardHidden"
                  android:launchMode="singleInstance"
			>
<!--   put it above for release, the debugger can't cope with it               android:process=":nitfol"-->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <data android:mimeType="application/x-zmachine" />
            </intent-filter>
        </activity>
    	<provider android:name=".hunkypunk.HunkyPunkProvider"
    		android:authorities="org.andglk.hunkypunk.HunkyPunk"
    	/>
    	<activity android:name=".hunkypunk.GamesList"
    		android:label="@string/hunky_punk"
    	>
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>		
    	<activity android:name=".hunkypunk.GameDetails"
    		android:label="@string/game_details"
    	>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<data android:scheme="content" android:host="org.andglk.hunkypunk.HunkyPunk" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
    	</activity>
    	<activity-alias
    		android:label="@string/hunky_punk"
    		android:name=".hunkypunk.InstallGame"
    		android:targetActivity=".hunkypunk.GameDetails"
    	>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<data android:mimeType="application/x-zmachine" scheme="file"/>
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity-alias>
		
	</application>
    <uses-sdk android:minSdkVersion="3" />

</manifest>
