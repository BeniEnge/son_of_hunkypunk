<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.andglk.hunkypunk"
      android:versionCode="2"
      android:versionName="0.2">
      
    <supports-screens
    	android:smallScreens="true"
    	android:normalScreens="true"
    	android:largeScreens="true"
    	android:anyDensity="true"
    />
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application android:icon="@drawable/icon" android:label="@string/app_name"
    >
<!-- android:debuggable="true" -->
        <activity android:name="org.andglk.nitfol.Nitfol"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboard|keyboardHidden"
                  android:process=":nitfol"
			>
<!-- for debugging remove android:process above, the debugger can't cope with it -->

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <data android:mimeType="application/x-zmachine" />
            </intent-filter>
        </activity>
    	<provider android:name=".HunkyPunkProvider"
    		android:authorities="org.andglk.hunkypunk.HunkyPunk"
    	/>
    	<activity android:name=".GamesList"
    		android:label="@string/hunky_punk"
    	>
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>		
    	<activity android:name=".GameDetails"
    		android:label="@string/game_details"
    	>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<data android:scheme="content" android:host="org.andglk.hunkypunk.HunkyPunk" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
    	</activity>
    	<activity-alias
    		android:label="@string/hunky_punk"
    		android:name=".InstallGame"
    		android:targetActivity=".GameDetails"
    	>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<data android:mimeType="application/x-zmachine" scheme="file"/>
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity-alias>
		
	</application>
    <uses-sdk android:minSdkVersion="3" />

</manifest>
